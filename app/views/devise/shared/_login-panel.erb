<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="email-fields"><%= f.email_field :email, :autofocus => true, :class => 'text-input', :placeholder => 'your@email.com' %></div>

  <div class="pwd-fields"><%= f.password_field :password, :class => 'text-input', :placeholder => 'password' %></div>

  <% if devise_mapping.rememberable? %>
    <div class="remember-me-fields"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end %>

  <div class="submit-btn"><%= f.submit "sign in", :class => 'sign-in-btn' %></div>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="sign-up-link">
    Not yet a member?
    <%= link_to "Sign up here", new_registration_path(resource_name) %>
  </div>
<% end %>
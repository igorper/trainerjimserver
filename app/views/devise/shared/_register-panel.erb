<%
resource_name = :user
resource ||= User.new
devise_mapping ||= Devise.mappings[:user]
%>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="email-fields"><%= f.email_field :email, :autofocus => true, :class => 'text-input', :placeholder => 'your@email.com' %></div>

  <div class="pwd-fields"><%= f.password_field :password, :class => 'text-input', :placeholder => 'password' %></div>

  <div class="pwd-fields confirmation"><%= f.password_field :password_confirmation, :class => 'text-input', :placeholder => 'confirm password' %></div>

  <div class="submit-btn"><%= f.submit "sign up", :class => 'sign-in-btn' %></div>
<% end %>

<div class="login-link">
  Already a member?
  <%= link_to "Login here.", new_session_path(resource_name) %>
</div>
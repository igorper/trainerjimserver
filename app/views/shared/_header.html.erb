<div id="header" class="header outer-container">
  <div class="central-strip">
    <table class="panel">
      <tr>
        <td class="logo-part">
          <div class="logo clickable-link" data-cl-href="<%= home_url %>"></div>
        </td>
        <td class="main-part">
          <table class="buttons">
            <tr>
              <td class="main-button button-behaviour"></td>
              <td class="main-button button-behaviour"></td>
              <td class="main-button button-behaviour"></td>
              <td class="main-button button-behaviour last"></td>
            </tr>
          </table>
        </td>
        <td class="login-part">
          <div>
            <% if AuthenticationHelper.is_logged_in?(session) then %>
              <%= AuthenticationHelper.current_user_display_name(session) %>
              <a href="<%= logout_url %>">Log out</a>
            <% else %>
              <a href="<%= login_url %>">Log in</a>
            <% end %>
          </div>
        </td>
      </tr>
    </table>
  </div>
</div>

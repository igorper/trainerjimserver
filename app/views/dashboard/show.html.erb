<div id="dashboard-show" class="container">
  <div class="span4">
    <div class="people-exercises" data-bind="foreach: users">
      <a data-bind='page-href: full_name'>
        <div class="entry button-behaviour" data-bind="css: {selected: $parent.selectedUser() == $data, even: $index() % 2 == 1}">
          <div class="title" data-bind="text: display_name">
          </div>
          <div class="icon"></div>
        </div>
      </a>
    </div>

    <div class="numbers-widget">
      <div class="numbers-header">
        <div class="numbers-header-tab">month</div>
        <div class="numbers-header-tab numbers-header-tab-selected">total</div>
        <div class="numbers-header-caption">You. In numbers.</div>
      </div>
      <div class="numbers-rows">
        <div class="numbers-row numbers-row-non-bottom">
          <div class="numbers-row-bg-text">active</div>
          <div class="numbers-row-text">
            <span class="numbers-input">2</span>
            days
            <span class="numbers-input">11</span>
            hours
          </div>
        </div>
        <div class="numbers-row numbers-row-non-bottom">
          <div class="numbers-row-bg-text">lifted</div>
          <div class="numbers-row-text">
            <span class="numbers-input">798</span> kg
          </div>
        </div>
        <div class="numbers-row">
          <div class="numbers-row-bg-text">done</div>
          <div class="numbers-row-text">
            <span class="numbers-input">89</span> % workouts
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="span8">
    <div class="statistics" />
  </div>
</div>

<% content_for :trainees do %>
    <%= render :partial => 'shared/trainees_dropdown' %>
<% end %>
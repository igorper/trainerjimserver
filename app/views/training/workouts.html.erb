<div class="my-workouts span3">
  <h3 class="jim-title">My workouts</h3>

  <ul class="workout-list nav nav-tabs nav-stacked" data-bind="foreach: my_templates, visible: my_templates().length > 0" style="display: none;">
    <li data-bind="css: {highlighted: id < 0}, click: $root.onSelectTraining">
      <a href="#">
        <div class="content">
          <div class="left" data-bind="html: name"></div>
          <div class="right"><i class="icon-chevron-right icon-white">​</i>​</div>
        </div>
      </a>
    </li>
  </ul>

</div>

<div class="main-panel span9">
  <div class="jim-box">

    <div class="header">
      <h1 class="jim-title">Welcome champ!</h1>
      <h1 class="jim-sub-title">Let's get you started, shall we?</h1>
    </div>

    <div class="separator"></div>

    <div class="instructions">
      <div class="row-fluid">
        <div class="span4">
          <span class="marginalium">1</span>
          <span class="contentium">Select & modify a training. It will be pushed to your mobile</span>
        </div>
        <div class="span4">
          <span class="marginalium">2</span>
          <span class="contentium"><a href="#">Download</a> the JIM mobile application</span>
        </div>
        <div class="span4">
          <span class="marginalium">3</span>
          <span class="contentium">Select your training, push start and... start sweating</span>
        </div>
      </div>
    </div>

    <div id="workout-templates" class="header">
      <h1 class="jim-title">Workouts</h1>
      <h1 class="jim-sub-title">For starters select and modify one of the <span class="underline">existing regimes</span> below.</h1>
    </div>

    <div class="regimes" data-bind="foreach: templates, visible: templates().length > 0" style="display: none;">
      <a class="regime" href="#selected-workout" data-bind="css: { active: id % 3 == 2 }, click: $root.onSelectTraining">
        <div class="icon"><div class="tick-icon"><i class="icon-ok"></i></div><div class="image"></div></div>
        <div class="name" data-bind="text: name"></div>
      </a>
    </div>

    <div id="my-workout" class="selected-regime" data-bind="with: selected_training, visible: !!selected_training()" style="display: none;">
      <h1 class="jim-title">Edit your workout</h1>
      
      <div class="name"><span data-bind="text: name"></span> <div class="icon"><i class="icon-ok"></i></div></div>

      <div class="exercises" data-bind="foreach: exercises">

        <div class="exercise">
          <div class="details row-fluid button-behaviour">
            <div class="name span7">
              <span class="exercise-label">Exercise:</span>
              <span class="exercise-name"data-bind="text: exercise_type().name"></span>
            </div>
            <div class="add-series span5">
              <button class="btn">Add series <i class="icon-plus-sign"></i></button>
            </div>
          </div>

          <div class="series-list" data-bind="foreach: series">

            <div class="series">
              <div class="row-fluid">
                <div class="reps span4 data-field">
                  <table class="content">
                    <tr>
                      <td class="text"><div>reps: <span class="value" data-bind="text: repeat_count">10</span></div></td>
                      <td class="plus-minus-btns"><div><button class="plus-btn btn"><i class="icon-plus icon-white"></i></button><button class="minus-btn btn"><i class="icon-minus icon-white"></i></button></div></td>
                    </tr>
                  </table>
                </div><div class="weight span4 data-field">
                  <table class="content">
                    <tr>
                      <td class="text"><div>weight: <span class="value" data-bind="text: weight">7</span> kg</div></td>
                      <td class="plus-minus-btns"><div><button class="plus-btn btn"><i class="icon-plus icon-white"></i></button><button class="minus-btn btn"><i class="icon-minus icon-white"></i></button></div></td>
                    </tr>
                  </table>
                </div><div class="rest span3 data-field">
                  <table class="content">
                    <tr>
                      <td class="text"><div>rest: <span class="value" data-bind="text: rest_time">15</span> s</div></td>
                      <td class="plus-minus-btns"><div><button class="plus-btn btn"><i class="icon-plus icon-white"></i></button><button class="minus-btn btn"><i class="icon-minus icon-white"></i></button></div></td>
                    </tr>
                  </table>
                </div><div class="remove-btn span1">
                  <button class="btn"><i class="icon-remove-sign"></i></button>
                </div>
              </div>
            </div>

          </div>
        </div>

      </div>

      <div class="workout-buttons">
        <div class="row-fluid">
          <div class="span8"></div>
          <div class="span4">
            <button class="delete btn">Delete</button>
            <button class="save btn btn-success">Save</button>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
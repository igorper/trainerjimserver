<!DOCTYPE html>
<html>
  <head lang="en">
    <title><%= Rails.application.config.page_name %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= stylesheet_link_tag    "frame", :media => "all" %>
    <%= stylesheet_link_tag    controller_name, :media => "all" if Rails.application.assets.find_asset(controller_name + '.css') %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "frame" %>
    <%= javascript_include_tag controller_name if Rails.application.assets.find_asset(controller_name + '.js') %>
    <%= csrf_meta_tags %>
  </head>
  <body class="main-layout <%= controller_name %> <%= action_name  %>">
      <%= render :partial => 'shared/header' %>
      <div class="container">
        <div class="row content"><%= yield %></div>
      </div>
      <%= render :partial => 'shared/footer' %>
  </body>
</html>
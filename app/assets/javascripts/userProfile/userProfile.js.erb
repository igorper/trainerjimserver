//= require userProfile/userProfileDetails

var userProfile = angular.module('userProfile', [
  'ui.router',
  'userProfile.details'
]);

userProfile.config(['$stateProvider', function ($stateProvider) {
  $stateProvider.state('main.userProfile', {
    url: '/userProfile',
    templateUrl: "<%= asset_path('userProfile/userProfile.html') %>",
    controller: ['$scope', '$state', function ($scope, $state) {
      $scope.sections = [
        {
          name: "Details",
          link: "main.userProfile.details"
        }
      ];

      $scope.isSectionActive = function (section) {
        return $state.includes(section.link) || !!section.activeUrls && section.activeUrls.some(function (url) {
            return $state.includes(url);
          });
      };
    }]
  });
}]);
//= require userProfile/userProfileDetails

var userProfile = angular.module('userProfile', [
  'ui.router',
  'userProfile.details',
  'util.links'
]);

userProfile.config(['$stateProvider', function ($stateProvider) {
  $stateProvider.state('main.userProfile', {
    url: '/userProfile',
    templateUrl: "<%= asset_path('userProfile/userProfile.html') %>",
    controller: ['$scope', 'isLinkActive', function ($scope, isLinkActive) {
      $scope.sections = [
        {
          name: "Details",
          link: "main.userProfile.details"
        }
      ];

      $scope.isLinkActive = isLinkActive;
    }]
  });
}]);
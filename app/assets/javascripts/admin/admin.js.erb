//= require admin/adminExerciseTypes

var admin = angular.module('admin', [
  'ui.router',
  'admin.exerciseTypes',
  'util.links'
]);

admin.config(['$stateProvider', function ($stateProvider) {
    $stateProvider
      .state('main.admin', {
        url: '/admin',
        templateUrl: "<%= asset_path('admin/admin.html') %>",
        controller: ['$scope', 'isLinkActive', function ($scope, isLinkActive) {
          $scope.sections = [
            {
              name: "Exercise Types",
              link: "main.admin.exerciseTypes"
            }
          ];

          $scope.isLinkActive = isLinkActive;
        }]
      })
    ;
  }])
;